<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.module.scrapepenguin"
       name="ScrapePenguin"
       version="1.0.0"
       provider-name="Manus">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.22.0"/>
        <import addon="script.module.beautifulsoup4" version="4.8.0"/>
    </requires>
    <extension point="xbmc.python.module"
               library="lib"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Scraping module for PenguinSurf and other addons.</summary>
        <description lang="en">Built to scrape movies and TV shows from PenguinSurf, The Crew, etc., then saving them to Kodi and your device.</description>
        <platform>all</platform>
        <license>GPL-3.0-or-later</license>
    </extension>
</addon>
