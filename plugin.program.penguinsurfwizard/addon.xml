<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.penguinsurfwizard"
       name="PenguinSurf Setup Wizard"
       version="1.0.0"
       provider-name="Manus">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="xbmc.addon" version="19.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Setup Wizard for PenguinSurf addons.</summary>
        <description lang="en">A wizard to help users configure and install the full suite of PenguinSurf addons.</description>
        <platform>all</platform>
        <license>GPL-3.0-or-later</license>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>
