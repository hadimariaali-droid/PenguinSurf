<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.penguinsurf"
       name="PenguinSurf Repository"
       version="1.0.0"
       provider-name="Manus">
    <extension point="xbmc.addon.repository"
               name="PenguinSurf Repository">
        <info compressed="true">https://YOUR_HOSTING_URL/addons.xml</info>
        <checksum>https://YOUR_HOSTING_URL/addons.xml.md5</checksum>
        <datadir zip="true">https://YOUR_HOSTING_URL/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">The official repository for the PenguinSurf video addon.</summary>
        <description lang="en">Contains the PenguinSurf video addon for free, no-restriction streaming of movies and TV shows.</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>
